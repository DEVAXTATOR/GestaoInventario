
@model GestaoInventario.Models.MovimentacaoStock

@{
    Layout = "_Layout";
}

<h1>Eliminar Movimentação de Stock</h1>

<h3>Tem a certeza que deseja eliminar esta movimentação de stock?</h3>
<div>
    <h4>Movimentação</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Produto
        </dt>
        <dd class = "col-sm-10">
            @Model.Produto.Nome
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Model.Quantidade
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Model.Data.ToShortDateString()
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
