@model GestaoInventario.Models.MovimentacaoStock

@{
    ViewData["Title"] = "Registrar Movimentação";
}
@{
    Layout = "./_Layout";
}

<h2>Registrar Movimentação</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.Produtos"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsEntrada" class="control-label"></label>
                <select asp-for="IsEntrada" class="form-control">
                    <option value="true">Entrada</option>
                    <option value="false">Saída</option>
                </select>
                <span asp-validation-for="IsEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>
