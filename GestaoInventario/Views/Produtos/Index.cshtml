@model IEnumerable<GestaoInventario.Models.Produto>

@{
    Layout = "_Layout";
}

<h1>Produtos</h1>

<p>
    <a class="btn btn-primary" asp-controller="Produtos" asp-action="Create">Criar Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>@produto.Quantidade</td>
                <td>@produto.Categoria.Nome</td>
                <td>
                    <button class="btn btn-secondary editar" data-id="@produto.Id">Editar</button> |
                    <button class="btn btn-info detalhes" data-id="@produto.Id">Detalhes</button> |
                    <button class="btn btn-danger eliminar" data-id="@produto.Id">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/site.js"></script>
}
