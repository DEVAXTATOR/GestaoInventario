@model GestaoInventario.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem a certeza que deseja eliminar esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" onclick="history.back()" class="btn btn-secondary">Cancelar</button>
    </form>
</div>
