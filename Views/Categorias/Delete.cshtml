@model GestaoInventario.Models.Categoria

@{
    Layout = "_Layout";
    ViewData["Title"] = "Eliminar Categoria";
}

<h1>Eliminar Categoria</h1>

<h3>Tem a certeza que deseja eliminar esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <button type="button" onclick="history.back()" class="btn btn-secondary">Cancelar</button>
    </form>
</div>
