@model GestaoInventario.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Voltar para a lista</button>
</div>
