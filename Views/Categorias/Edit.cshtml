@model GestaoInventario.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome Atual:</label>
        <input asp-for="Nome" class="form-control" value="@Model.Nome" readonly />
    </div>
    <div class="form-group">
        <label for="novoNome">Novo Nome:</label>
        <input type="text" id="novoNome" name="nome" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Atualizar</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancelar</button>
</form>
