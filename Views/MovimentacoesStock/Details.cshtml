@model GestaoInventario.Models.MovimentacaoStock

@{
    Layout = "_Layout";
}

<h1>Detalhes da Movimentação de Stock</h1>

<div>
    <h4>Movimentação de Stock</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Produto
        </dt>
        <dd class="col-sm-10">
            @Model.Produto.Nome
        </dd>
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Model.Quantidade
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Model.Data.ToShortDateString()
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>
